icon_size = 46px
icon_bar_width = icon_size * 3
button_width = 90px

.share
  display inline-block !important
  size: button_width 30px
  padding-right ((icon_bar_width - button_width) / 2)

  [class*='entypo-']:before
    font-family: 'entypo', sans-serif;

  label
    display inline-block
    size: button_width 30px
    box-sizing border-box
    cursor: pointer
    margin: 0
    padding: 5px 10px
    transition: all .25s ease-in-sine

    span
      text-transform uppercase
      font-weight: 900
      -webkit-font-smoothing: antialiased
      padding-left: 6px

  .social
    display block
    position relative
    z-index 100
    transform-origin: 50% 0%
    transform: scale(0) translateY(190px)
    opacity: 0
    transition: all .4s ease
    margin-left: 0

    &.active
      opacity: 1
      transform: scale(1) translateY(10px)
      transition: all .4s ease
      margin-left: -((icon_bar_width - button_width) / 2)

  ul
    relative: left 0 right 0
    size: icon_bar_width icon_size
    color: #fff
    background: #3B5998
    margin: auto
    padding: 0
    list-style: none

    li
      font-size: 20px
      cursor: pointer
      width: icon_size
      margin: 0
      padding: 12px 0
      text-align: center
      float: left
      display: block
      height: 22px
      position: relative
      z-index: 2
      transition()

      &:hover
        color: rgba(0,0,0,.5)

    &:before
      content: ''
      display: block
      size: 0
      absolute: left 0 right 0
      margin: -10px auto
      border-left: 20px solid transparent
      border-right: 20px solid transparent
      border-bottom: 20px solid #3B5998

  li[class*='twitter']
    background: #6CDFEA
    padding: 12px 0

  li[class*='gplus']
    background: #E34429
    padding: 12px 0
