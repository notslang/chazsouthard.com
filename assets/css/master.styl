normalize()
base()
buttons()
flash-notices()

// this is actually a practice worth noting. By using variables, I can
// override normal color names with specific shades of a given color. And by
// assigning names, I can insure that there are no weird "slightly-off"
// versions of a color. Also, it makes the CSS much more readable.

@import '_ui-elements'
@import '_settings'

// colors
blue = #062C6C
ltblue = #328bde
gray = #ECF0F1
ltgray = #7f7f7f
orange = #D5572E
slate = #192d35
white = #F6F8FB

// dims
logo_height = 100px
nav_border_width = 10px

// responsive
img, object, embed, audio, video
	max-width:100%

//grid
grid()
	column-width = 60px
	gutter-width = 20px
	columns = 12
	total-width = 100%

body
	position: relative
	background: white

body, html
	min-height 100%
	height 100%

strong
	font-weight: 600

header
	group()
	padding 0
	max-width 1200px

	.title 
		font-size 3em

//basic typography
nav, h1, h2, h3, h4, h5, h6
	font-family: 'Yanone Kaffeesatz', sans-serif

p
	font-family: 'Didact Gothic', sans-serif;

// layout 
nav
	position relative
	background ltblue
	border-top: nav_border_width solid orange
	border-bottom nav_border_width solid slate
	line-height logo_height
	font-size (logo_height / 6)

	label
		text-transform uppercase
		color white
		font-weight bold

		a
			padding 5px

#logo, nav
	vertical-align middle

#logo
	logo_padding = (logo_height / 6)
	content_size = logo_height - 2 * logo_padding
	size content_size
	border-radius 50%
	display inline-block
	box-sizing border-box
	padding logo_padding
	margin logo_padding

	//a 1px border would look choppy... using a shadow gives us a slight
	//antialiasing effect
	box-shadow 0 0 2px 1px orange 

	//the background image is really only the weird shape in the middle, the
	//surrounding circle can be made with pure css, bringing our image size
	//down to 1.6 kb - enough to be base64'ed and inlined. And that means 1
	//less http request & faster page load time
	background url('../img/logo2.png') no-repeat center
	background-size 60% 

// Document setup
section
	position relative
	line-height 30px
	background gray
	padding 20px
	margin 20px

	h1
		text-transform uppercase

	&.text:after
		//I'm just gonna say that this is the class that gets an emblem at the
		//bottom... I'll prolly come up with a better selector later
		content ''
		display inline-block
		position relative
		size 40% 50px
		background url('../img/moon.svg') no-repeat 100%
		group()

