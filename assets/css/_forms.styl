section
	textarea
		resize vertical

	input, textarea
		width 100%
		box-sizing border-box
		border none
		border 1px slate solid

	input
		height 30px

		&[type=submit]
			background ltblue
			color white
			border-radius none
			font-size 20px

	.wpcf7-not-valid
		border 1px solid red

	.wpcf7-not-valid-tip
		display block
		color red
		border none
		position relative
		top auto
		left auto
		padding 0
		margin-top 2px
		background none
		font-size 15px

	.wpcf7-validation-errors, .wpcf7-mail-sent-ng
		background lighten(red, 80%)
		border 1px solid red
		color red

	.wpcf7-response-output
		margin 10px 0
		padding 20px
		box-sizing border-box

	.wpcf7-mail-sent-ok
		background #E8FFE2
		color #1EA524
		border 1px solid @color
