!!!
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width")
    meta(name='description', content='description of your site')
    meta(name='author', content= "author of the site")
    link(rel='icon', href="/favicon.png")
    link(rel='stylesheet', href='css/master.css')
    link(href='http://fonts.googleapis.com/css?family=Didact+Gothic', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz', rel='stylesheet', type='text/css')
    title= title

  body
    header
    nav
        a#logo
        .buttonset
            - var checked = true
            for page in pages
                input(type='radio', name='nav', value=page, id="#{page}_nav", checked=checked)
                label(for="#{page}_nav")
                    a(href="##{page}") #{page}
                - checked = false

        .fbShare
            ul#subnav
                li
                    a
                        //pulled from db
    //end header


    // home

    
    != content

    //- add other scripts through require.js, not here
    script(data-main="js/main", src="js/require.js")

    //- this must be included for live reload to work in developement
    //- it will be automatically ignored when deployed
    != livereload
